@model IEnumerable<Test1.Models.Product>

@{
    ViewBag.Title = "Index";
}

<p>
    <a href="@Url.Action("Create", "Products")" class="btn btn-secondary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-arrow-right"></i>
        </span>
        <span class="text">ເພີ່ມ</span>
    </a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            ສິນຄ້າ
        </h6>
    </div>
    <div class="card-body">
        <table class="table" id="tb">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.CateName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Buy)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Sale)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Barcode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
