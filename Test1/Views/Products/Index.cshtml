        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>*@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CateName)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Buy)*@
                        @String.Format("{0:n}", item.Buy)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Sale)*@
                        @String.Format("{0:n}", item.Sale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Barcode)
                    </td>


                    @*<td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredients)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePath)
        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>
                        <a href="@Url.Action("Edit","Products", new { id = item.ID })" class="btn btn-info">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Delete","Products", new { id = item.ID })" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Styles{

    <link href="~/Content/Assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
@section Scripts{
